def how_match_days(month):
    if month > 12 or month < 1:
        print('А месяцев всего 12')
    else:
        if month == 1 or month == 3 or month == 5 or month == 7 or month == 8 or month == 10 or month == 12:
            print('31')
        elif month == 2:
            print('28')
        else:
            print('30')

how_match_days(int(input('введите номер месяца: ')))
