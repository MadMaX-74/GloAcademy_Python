text3 = 'Недавно проходил обучение в Academy.'
text2 = 'Недавно проходил обучение'
text1 = 'Недавно проходил обучение в Academy. Все очень круто!'

if len(text1) > len(text2) and len(text1) > len(text3):
    print(text1)
elif len(text2) > len(text3) and len(text2) > len(text1):
    print(text2)
else:
    print(text3)
