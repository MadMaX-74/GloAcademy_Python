#ask password long
#password long
#Symbol in password
#string random symbols, ask user
#generate password

import  random


def ask_question(question):
    print(question, 'Нажмите да или нет')
    answer= input()
    if answer == 'да':
        return True
    else:
        return False

def generate_password(length, chars):
    password = ''
    for i in range(length):
        random_index = random.randint(0, len(chars) - 1)
        password += chars[random_index]

    return password


def create_password():
    print('Введите сколько паролей вы хотели бы сгениерировать?')
    num_of_password = int(input())
    print('Введите длину пароля')
    length = int(input())

    digits_enabled = ask_question('Включять ли цифры?')
    latin_lowercase_enabled = ask_question('Включять ли строчные латинские буквы?')
    latin_uppercase_enabled = ask_question('Включять ли заглавные латинские буквы?')
    russian_lowercase_enabled = ask_question('Включять ли строчные русские буквы?')
    russian_uppercase_enabled = ask_question('Включять ли заглавные русские буквы?')
    punktuation_enabled = ask_question('Включять ли знак пунктуации?')

    enabled_chars = ''

    digits = '0123456789'
    latin_lowercase_letters = 'abcdefghijklmnopqrstuvwxyz'
    latin_uppercase_letters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
    russian_lowercase_letters = 'абвгдеёжзийклмнопрстуфхцчшщъыьэюя'
    russian_uppercase_letters = 'АБВГДЕЁЖЗИЙКЛМОПРСТУФХЦЧШЩЪЫЬЭЮЯ'
    punktuation = '!#$%&*+-=?@^_'

    if digits_enabled:
        enabled_chars += digits
    if latin_lowercase_enabled:
        enabled_chars += latin_lowercase_letters
    if latin_uppercase_enabled:
        enabled_chars += latin_uppercase_letters
    if russian_lowercase_enabled:
        enabled_chars += russian_lowercase_letters
    if russian_uppercase_enabled:
        enabled_chars += russian_uppercase_letters
    if punktuation_enabled:
        enabled_chars += punktuation


    while num_of_password !=0:
        num_of_password -= 1
        password = generate_password(length, enabled_chars)
        print(password)





print('Привет. Я генератор паролей. \nБудет несколько вопросов для гененрации пароля')
create_password()
new_password = input('Вы хотите получить другой пароль? да или нет: \n')
if new_password == 'да':
    create_password()
else:
    print('Спасибо. Надеюсь вам нравиться ваш пароль')
